<div class="container mt-5">
  <div class="card">
    <div class="card-header bg-info text-white">
      <h3>User Profile</h3>
    </div>
    <div class="card-body">

      <!-- Profile Details Section -->
      <div class="cart-items">
        <h5>Name</h5>
        <p><strong>{{profileDetails.name}}</strong></p>
        <hr />

        <h5>Email</h5>
        <p><strong>{{profileDetails.email}}</strong></p>
        <hr />
      </div>
      <a
        href="/edit-profile/{{profileDetails._id}}"
        class="btn btn-primary"
      >Edit Profile</a>
    </div>
  </div>
</div>