<h1>Ordered Products</h1>
<section>
  <div class="container mt-5">
    <div class="row">
      <!--If any kind of doubts then write a console.log on the user-helpers getOrderProducts function-->

      {{#each product.products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card shadow-sm">
            <img
              src="{{this.productId.image}}"
              class="card-img-top"
              alt="{{this.productId.name}}"
              style="height: 200px; object-fit: cover;"
            />
            <div class="card-body text-center">
              <h5 class="card-title text-truncate">{{this.productId.name}}</h5>
              <h5 class="card-title text-truncate">Price: â‚¹{{this.price}}</h5>
              <p class="card-text text-muted">Quantity: {{this.quantity}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>